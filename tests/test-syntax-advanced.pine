indicator("Advanced Syntax Test", overlay=true)

// Test advanced syntax features
var array<float> prices = array.new<float>()
var matrix<float> data = matrix.new<float>(10, 5)
var map<string> info = map.new<string>()

// Array operations
array.push(prices, close)
array.push(prices, open)
size = array.size(prices)
value = array.get(prices, 0)

// Matrix operations
matrix.set(data, 0, 0, close)
